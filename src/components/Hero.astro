---
import profileImage from '@assets/images/profile.png';
import { Image } from '@astrojs/image/components';
import Button from '@components/ui/Button.astro';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Hello there! My name is <span class="text-green">Bethany Yollin</span> and I am a Data Engineer.
			</h1>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class={'flex'} name="download">
			<a href="/Bethany Yollin's Resume Latest.pdf" target='_blank'>View Resume</a>
			</Button>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			src={profileImage}
			alt="bethany"
			aspectRatio="4:4"
			format="png"
			width={500}
			height={500}
			loading="eager"
			style="border-radius: 100em"
		/>
	</div>
</section>
